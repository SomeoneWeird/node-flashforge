{
  "compilerOptions": {
    "target": "es2017",
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "build",
    "removeComments": false,
    "importHelpers": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "build"
  ],
}

